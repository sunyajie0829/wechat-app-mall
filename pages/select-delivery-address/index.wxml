<view class="container">
  <view class="address-list">
    <view class="a-address" wx:for="{{addressList}}" wx:key="id">
      <view class="left-text" bindtap="selectTap" data-id="{{item.id}}" data-bean="{{item}}">
        <view class="address-box">
          {{item.name}}
        </view>
        <view class="name-tel">
          <text space="nbsp">联系方式:{{item.linkPhone}}    距离:{{item.distance}}km</text>
        </view>
      </view>
    </view>
  </view>
</view>